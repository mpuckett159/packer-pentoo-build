{
    "provisioners": [],
    "builders": [
      {
        "type": "vmware-iso",
        "floppy_files": ["pentoo-install-config.json"],
        "boot_command": [
            "{{user `LIVECD_PASSWORD` }}<enter><wait1s>{{user `LIVECD_PASSWORD` }}<enter><wait1s>",
            "sudo dhcpcd eth0<enter><wait15s>",
            "sudo mkdir /mnt/floppy<enter>",
            "sudo chmod 777 /mnt/floppy<enter>",
            "sudo mount /dev/fd0 /mnt/floppy<enter><wait2s>",
            "sudo pentoo-installer --headless --config-file /mnt/floppy/pentoo-install-config.json<enter><wait20m>"
        ],
        "boot_wait": "3m",
        "disk_size": 66560,
        "guest_os_type": "other3xlinux-64",
        "headless": "false",
        "iso_url": "{{user `ISO_PATH` }}",
        "iso_checksum": "{{ user `ISO_CHECKSUM` ",
        "communicator": "none",
        "vm_name": "pento-packer-build",
        "output_directory": "{{user `OUTPUT_DIR`}}",
        "vmx_data": {
          "memsize": "4096",
          "numvcpus": "2",
          "ethernet0.virtualDev": "e1000",
          "ethernet0.connectionType": "nat",
          "ethernet0.present": "TRUE",
          "ethernet0.pcislotnumber": "32"
        }
      }
    ],
    "post-processors": []
  }